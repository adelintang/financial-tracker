generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  role     Role

  products Product[]
}

model Product {
  id      String  @id @default(uuid())
  name    String
  desc    String
  price   Int
  qty     Int
  user_id String

  user    User    @relation(fields: [user_id], references: [id])
}

enum Role {
  SELLER
  CONSUMER
}