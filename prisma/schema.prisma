generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Currency {
  IDR
  USD
}

enum Role {
  ADMIN
  USER
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  currency   Currency
  role       Role
  created_at DateTime @default(now()) @map("createdAt")
  updated_at DateTime @updatedAt @map("updatedAt")

  @@index([email, name])
  @@map("users")
}
